{
  "manifest_version": 3,
  "name": "Nathanael's Developer Tool",
  "description": "A set of tools to help a developer be more productive.",
  "version": "0.1.0",
  "action": {
    "default_title": "Nathanael's Developer Tool"
  },
  "permissions": ["tabs", "windows", "bookmarks", "storage"],
  "chrome_url_overrides": {
    "newtab": "src/newtab.html"
  },
  "options_page": "src/options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/content.css"],
      "run_at": "document_end"
    }
  ]
}
